<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft="12dp"
	        android:paddingRight="12dp"
	        android:paddingTop="12dp"
	        android:paddingBottom="12dp"
	        android:orientation="vertical"
            >
	        
            <EditText
		        android:id="@+id/et_all_shop_search"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="32dp"
		        android:layout_marginRight="22dp"
		        android:hint="输入店铺名称搜索"
		        android:singleLine="true"
		        android:padding="6dp"
		        android:textSize="@dimen/normal_text_size" 
		        android:editable="false"
		        android:clickable="true"
		        android:focusable="false"
		        android:background="@drawable/sel_edittext_bg_light"
		        android:drawableLeft="@drawable/icon_search_on"
		        ></EditText>
	        
        </LinearLayout>
        <!-- <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar_0"
            />
        <View 
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:background="@color/spacebar"
            />
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar_0"
            /> -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                >
                <LinearLayout 
                    android:id="@+id/view_shop_main_add_device"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:orientation="vertical"
	                android:paddingLeft="@dimen/shop_detail_opr_magin"
	                android:paddingRight="@dimen/shop_detail_opr_magin"
	                style="@style/ButtonTranslucent"
	                >
	                <ImageView 
	                    android:layout_width="@dimen/shop_detail_opr_icon_size"
	                    android:layout_height="@dimen/shop_detail_opr_icon_size"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/icon_add_devices"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:layout_marginTop="2dp"
	                    android:text="添加设备"
	                    android:textColor="@color/white"
	                    android:textSize="@dimen/normal_text_size"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    />
	            </LinearLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                >
                <LinearLayout 
                    android:id="@+id/view_shop_main_area"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:orientation="vertical"
	                android:paddingLeft="@dimen/shop_detail_opr_magin"
	                android:paddingRight="@dimen/shop_detail_opr_magin"
	                style="@style/ButtonTranslucent"
	                >
	                <ImageView 
	                    android:layout_width="@dimen/shop_detail_opr_icon_size"
	                    android:layout_height="@dimen/shop_detail_opr_icon_size"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/icon_aream_white"
	                    />
	                <TextView 
	                    android:id="@+id/tv_shop_detail_header_volume"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:layout_marginTop="2dp"
	                    android:text="分区管理"
	                    android:textColor="@color/white"
	                    android:textSize="@dimen/normal_text_size"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    />
	            </LinearLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                >
                <LinearLayout 
                    android:id="@+id/view_shop_main_plan"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_horizontal"
	                android:orientation="vertical"
	                android:paddingLeft="@dimen/shop_detail_opr_magin"
	                android:paddingRight="@dimen/shop_detail_opr_magin"
	                style="@style/ButtonTranslucent"
	                >
	                <ImageView 
	                    android:layout_width="24dp"
	                    android:layout_height="24dp"
	                    android:layout_gravity="center_horizontal"
	                    android:src="@drawable/icon_hq_plan"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="center_horizontal"
	                    android:layout_marginTop="4dp"
	                    android:text="播放计划"
	                    android:textColor="@color/white"
	                    android:textSize="@dimen/normal_text_size"
	                    android:singleLine="true"
	                    android:ellipsize="end"
	                    />
	            </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
        <!-- <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar_0"
            />
        <View 
            android:layout_width="fill_parent"
            android:layout_height="8dp"
            android:background="@color/spacebar"
            />
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/spacebar_0"
            /> -->
    </LinearLayout>

</RelativeLayout>
