<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/content"
        >
        <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:background="@color/white"
		     >
		    <com.znt.vodbox.view.RefreshRecyclerView
	            android:id="@+id/lv_plan"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:scrollbars="horizontal"
	            app:layout_behavior="@string/appbar_scrolling_view_behavior" 
	            android:layout_above="@+id/view_plan_list_sep"
			    android:layout_marginBottom="1dp"
	            />
		    <View 
		        android:id="@+id/view_plan_list_sep"
		        android:layout_width="fill_parent"
		        android:layout_height="1dp"
		        android:background="@color/spacebar"
		        android:layout_above="@+id/view_plan_list_head"
		        />
			<LinearLayout 
		        android:id="@+id/view_plan_list_head"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:clickable="false"
		        android:layout_alignParentBottom="true"
		        >
		        <RelativeLayout 
		            android:id="@+id/view_plan_list_leftopr"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:layout_weight="1.0"
		            android:paddingTop="12dp"
		            android:paddingBottom="12dp"
		            android:background="@drawable/sel_item_bg"
		            android:clickable="true"
		            >
		            <TextView 
		                android:id="@+id/tv_plan_list_leftopr"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="当前计划"
		                android:textColor="@color/text_blue_on"
		                android:layout_gravity="center_horizontal"
		                android:layout_centerInParent="true"
		                />
		        </RelativeLayout>
		        <View 
		            android:layout_width="1dp"
		            android:layout_height="fill_parent"
		            android:background="@color/spacebar"
		            />
		        <RelativeLayout 
		            android:id="@+id/view_plan_list_rightopr"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal"
		            android:layout_weight="1.0"
		            android:paddingTop="12dp"
		            android:paddingBottom="12dp"
		            android:background="@drawable/sel_item_bg"
		            android:clickable="true"
		            >
		            <TextView 
		                android:id="@+id/tv_plan_list_rightopr"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="历史计划"
		                android:layout_centerInParent="true"
		                />
		        </RelativeLayout>
		    </LinearLayout>
		</RelativeLayout>
        
  </android.support.design.widget.CoordinatorLayout>